extends layout

block content
	.container
		form(method='post', action='contact/send')
			h1 Contact
			.form-group
				label Name
				input.form-control(type='text',name='name',placeholer='Enter Your Name')
			.form-group
				label Email
				input.form-control(type='email',name='email',placeholer='Enter Your Email Address')
			.form-group
				label Message
				textarea.form-control(name='message', placeholer='Enter Your Message here...')
			button.btn.btn-default(type='submit') Submit